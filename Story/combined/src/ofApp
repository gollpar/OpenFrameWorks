//--------------------------------------------------------------
void ofApp::setup(){
    
    ofSetFrameRate(60);
    
    //gui slider secen1
    gui.setup();
    gui.add(posX.set("Move black cat", 350, 240, 500));
    
    gui.add(color.set("Black cat color", 0, 0, 255));
    
//    gui.add(toggle.setup("toggle", true));
//    gui.add(button.setup("GO TO Second scene"));
    
    cat1.set(0,0);
    cat2.set(0,0);
    
    //tail
    fbo.allocate(200, 107, GL_RGBA);
    fbo.begin();
    ofClear(255, 255, 255);
    fbo.end();
    
    //gui slider scene2
    gui.setup();
    gui.add(posX.set("Move black cat", 350, 240, 500));
    
    gui.add(color.set("Black cat color", 0, 0, 255));
    
//    gui.add(toggle.setup("toggle", true));
//    gui.add(button.setup("GO TO First scene"));

    
    
}

bool drawFirst = true;
bool drawSecond = true;

bool tail = true;
//--------------------------------------------------------------
void ofApp::update(){
    if (isSceneTwo) {
        sec = (ofGetFrameNum() / 60) % 60;
        
        drawFirst = sec < 2;
        drawSecond = sec < 100;
        
        fbo.begin();
        fbo.end();
    } else {
        // THIS IS WHERE UPDATE STUFF FROM SCENE 2 GOES
        fbo.begin();
        fbo.end();
        cout << "ADD  " << posX - movex << endl;
        if (490 < posX - movex  && posX - movex < 526) {
            // we are touching hands
            areTouchingHands = true;
        } else {
            areTouchingHands = false;
        }
    }
    
}

