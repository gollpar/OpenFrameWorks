//--------------------------------------------------------------
void ofApp::keyPressed(int key){
    if(key == OF_KEY_LEFT){
        movex = movex-100;
        movey=0;
        
        if(movex<-600){
            movex =ofGetWidth()-200;
         }
    }
        
   if(key == OF_KEY_RIGHT){
            movex = movex+100;
            movey=0;
       
   }
    if (key == OF_KEY_DOWN){
        isSceneTwo = false;
    }
    if (key == OF_KEY_UP) {
        isSceneTwo = true;
    }
}
//-------------------------------------------------------------
    
void ofApp::drawTail(float x, float y){
    
    
    ofSetColor(0);
    ofPolyline tail;
    
    //tail movement
    tail.addVertex(x, y);
    tail.addVertex(x+73, y-75.5);
    tail.addVertex(x-52.5, y-133);
    tail.addVertex(x-115.15 ,y);
    tail.draw();
    
}
